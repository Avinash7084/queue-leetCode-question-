class Solution {
public:
    vector<int> deckRevealedIncreasing(vector<int>& deck) {
        sort(deck.begin(),deck.end());
        int n = deck.size();
        queue<int>q;
        vector<int>v(n);

        for(int i=0;i<n; i++){
            q.push(i);
        }
        
        for(int i=0; i<n; i++){
            int idx = q.front();
            q.pop();

            v[idx] = deck[i];

            if(!q.empty()){
            q.push(q.front());
            q.pop();
            }
        }
        
        return v;
    }
};
